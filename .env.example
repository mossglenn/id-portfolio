# Environment Variables Template
# Copy this file to .env and fill in your actual values
# Note: Variables prefixed with PUBLIC_ are exposed to the client-side code

# Site Configuration
PUBLIC_SITE_URL=http://localhost:4321
PUBLIC_SITE_NAME=Portfolio Name

# Analytics (optional)
# Google Analytics
PUBLIC_GA_TRACKING_ID=

# Plausible Analytics
PUBLIC_PLAUSIBLE_DOMAIN=

# Contact Form (optional)
# Endpoint for form submissions (e.g., Formspree, Netlify Forms, etc.)
FORM_SUBMISSION_ENDPOINT=

# CMS Integration (optional)
# If using a headless CMS like Contentful, Sanity, etc.
CMS_API_KEY=
CMS_ENDPOINT=

# API Keys (optional)
# Add any third-party API keys your portfolio might need
# Example: GitHub API for fetching repositories
GITHUB_API_TOKEN=
