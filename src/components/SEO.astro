---
/**
 * SEO Component
 *
 * Handles all meta tags for SEO, Open Graph, and Twitter Cards.
 * Provides consistent metadata across all pages.
 *
 * @example
 * ```astro
 * import SEO from '@/components/SEO.astro';
 *
 * <SEO
 *   title="Project Title"
 *   description="A brief description of this page"
 *   image="/images/og-image.png"
 * />
 * ```
 */

export interface Props {
  title: string;
  description: string;
  image?: string;
  article?: boolean;
  publishedTime?: string;
  keywords?: string[];
}

const {
  title,
  description,
  image,
  article = false,
  publishedTime,
  keywords = [],
} = Astro.props;

// Ensure site URL is configured in astro.config.mjs
const siteUrl = Astro.site?.toString() || "http://localhost:4321";
const canonicalURL = new URL(Astro.url.pathname, siteUrl);

// Default OG image if none provided
const socialImage = image || "/og-default.png";
const socialImageURL = new URL(socialImage, siteUrl);

// Construct full page title
const fullTitle = title;
---

<!-- Primary Meta Tags -->
<title>{fullTitle}</title>
<meta name="title" content={fullTitle} />
<meta name="description" content={description} />
{keywords.length > 0 && <meta name="keywords" content={keywords.join(", ")} />}

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={article ? "article" : "website"} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={socialImageURL} />
<meta property="og:site_name" content={Astro.site?.toString() || "Portfolio"} />

{
  article && publishedTime && (
    <meta property="article:published_time" content={publishedTime} />
  )
}

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={fullTitle} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={socialImageURL} />

<!-- Additional SEO -->
<meta name="robots" content="index, follow" />
<meta name="language" content="English" />
<meta name="revisit-after" content="7 days" />
<meta name="author" content="Your Name" />
